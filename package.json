{
  "name": "comment-overlay",
  "version": "3.0.0",
  "description": "Reusable comment overlay renderer engine.",
  "repository": {
    "url": "https://github.com/roflsunriz/comment-overlay"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/comment-overlay.cjs.js",
  "module": "dist/comment-overlay.es.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/comment-overlay.es.js",
      "require": "./dist/comment-overlay.cjs.js"
    }
  },
  "files": [
    "src",
    "dist",
    "DOCUMENTATION.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "dev": "vite",
    "build": "npm run clean && npm run typegen && vite build && node scripts/sync-overlay-tests.mjs",
    "serve": "npx serve overlay-tests",
    "type-check": "tsc --project tsconfig.build.json --noEmit",
    "typegen": "tsc --project tsconfig.build.json",
    "lint": "eslint src --ext .ts",
    "preview": "vite preview"
  },
  "keywords": [
    "comment",
    "overlay",
    "renderer"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "prettier": "^3.7.3",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.6"
  },
  "overrides": {
    "vite": {
      "rollup": "npm:@rollup/wasm-node@4.52.5"
    }
  }
}
